<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1"/>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:success] %>
      <div class="text-center alert alert-success mb-0" role="alert">
        <%= flash[:success] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="text-center alert alert-info mb-0" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="text-center alert alert-danger mb-0" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <%= render 'layouts/navbar' %>
    <%= yield %>
  </body>
</html>
